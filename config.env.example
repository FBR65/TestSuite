# TestSuite Konfigurationsdatei
# Kopiere diese Datei zu .env und trage deine API-Schlüssel ein

# LLM API Konfiguration
LLM_API_KEY=na
LLM_API_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo
LLM_DEFAULT_MODEL=default

# Multi-LLM Konfiguration (JSON Format mit Modell:BaseURL Paaren)
LLM_MODELS={
    "mistralai/Mixtral-8x7B-Instruct": "http://10.84.0.10:8112/v1",
    "Mistral/Mixtral-8x22B-Instruct-v0.1": "http://10.78.0.4:8114/v1",
    "mistralai/Mistral-Small-3.2-24B-Instruct-2506": "http://10.84.0.7:8080/v1"
}

# Coding LLM API Konfiguration (speziell für Code-Generierung)
# Wenn CODING_MODEL nicht gesetzt ist, wird das "coding" Modell aus LLM_MODELS verwendet
CODING_API_KEY=dein_coding_api_hier
CODING_API_BASE_URL=https://api.openai.com/v1
CODING_MODEL=gpt-4

# Whisper API Konfiguration (für Audio)
WHISPER_API_KEY=dein_whisper_api_hier
WHISPER_API_BASE_URL=https://api.openai.com/v1
WHISPER_MODEL=whisper-1

# Vision API Konfiguration (für Bilder)
VISION_API_KEY=dein_vision_api_hier
VISION_API_BASE_URL=https://api.openai.com/v1
VISION_MODEL=gpt-4-vision-preview

# Voxtral API Konfiguration (für Audio)
VOXTRAL_API_KEY=dein_voxtral_api_hier
VOXTRAL_API_BASE_URL=https://api.openai.com/v1
VOXTRAL_MODEL=voxtral-audio

# Bewertung LLM Konfiguration
EVALUATION_API_KEY=dein_evaluation_api_hier
EVALUATION_API_BASE_URL=https://api.openai.com/v1
EVALUATION_MODEL=gpt-4

# System Konfiguration
LOG_LEVEL=INFO
RESULTS_DIR=data/results
MAX_TEST_DURATION=300
SIMILARITY_THRESHOLD=0.7